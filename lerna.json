{
  "npmClient": "yarn",
  "command": { 
    "publish": {
      "allowBranch": "master",
      "conventionalCommits": true,
      "exact": true 
    },
    "bootstrap": {
      "ignore": "component-*",
      "npmClientArgs": ["--no-package-lock"] 
    }
  },
  "packages": [
    "packages/*"
  ],
  "version": "0.0.0"
}
